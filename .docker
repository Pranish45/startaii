# Use Python 3.12 base image for compatibility with pydantic-core wheels
FROM python:3.12-slim

# Set environment variables to avoid Python buffering and bytecode generation
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Set work directory
WORKDIR /app

# Copy only requirements first for caching dependencies
COPY requirements.txt /app/

# Upgrade pip and install dependencies (adjust requirements file name if needed)
RUN pip install --upgrade pip wheel \
    && pip install -r requirements.txt

# Copy app source code
COPY . /app/

# Expose the port your app runs on (adjust as needed)
EXPOSE 8000

# Command to run your app (adjust if using uvicorn or another server)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
